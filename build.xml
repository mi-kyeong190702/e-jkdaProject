<?xml version="1.0" encoding="UTF-8"?>
<project name="MyWebProject" default="war" basedir=".">
  <property name="src.dir"  value="src"/>
  <property name="web.dir"  value="WebContent"/>
  <property name="build.dir" value="build"/>
  <property name="dist.dir"  value="dist"/>
  <property name="war.name"  value="MyWebProject.war"/>

  <target name="clean">
    <delete dir="${build.dir}"/>
    <delete dir="${dist.dir}"/>
  </target>

  <target name="prepare">
    <mkdir dir="${build.dir}/WEB-INF/classes"/>
    <copy todir="${build.dir}">
      <fileset dir="${web.dir}"/>
    </copy>
  </target>

  <target name="compile" depends="prepare">
    <javac srcdir="${src.dir}" destdir="${build.dir}/WEB-INF/classes" source="1.7" target="1.7" includeantruntime="false">
      <classpath>
        <fileset dir="${web.dir}/WEB-INF/lib">
          <include name="**/*.jar"/>
        </fileset>
      </classpath>
    </javac>
  </target>

  <target name="war" depends="compile">
    <mkdir dir="${dist.dir}"/>
    <war destfile="${dist.dir}/${war.name}" webxml="${web.dir}/WEB-INF/web.xml" basedir="${build.dir}"/>
    <echo>WAR created at ${dist.dir}/${war.name}</echo>
  </target>
</project>
